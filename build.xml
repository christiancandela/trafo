<project name="trafo" default="build">

  <property name="resolveMode" value="default"/>

  <property file="workspace.properties" />
  <import file="../build/build.config/defaultBuild.xml"/>  

  <macrodef name="iterate">
    <attribute name="target"/>
    <sequential>
      <subant target="@{target}" failonerror="true"> 
	<fileset dir=".">
	  <exclude name="org.dbdoclet.test.*/build.xml"/>
	  <exclude name="org.dbdoclet.trafo/build.xml"/>
	  <include name="*/build.xml"/>
	</fileset>
      </subant>
    </sequential>
  </macrodef>

  <target name="distclean">
    <iterate target="distclean"/>
  </target>

  <target name="build">
    <ant dir="org.dbdoclet.trafo" target="build"/>
    <iterate target="build"/>
  </target>

  <echo>resolve mode = ${resolveMode}</echo>
</project>
